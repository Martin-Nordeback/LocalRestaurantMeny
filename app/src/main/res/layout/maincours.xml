<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue">


    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/home_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/main_course"
        android:textColor="@color/bone_white"
        android:textSize="@dimen/large_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_header_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/main_first_dish"
        android:textAlignment="textStart"
        android:textColor="@color/bone_white"
        android:textSize="@dimen/medium_font"
        app:layout_constraintStart_toStartOf="@+id/main_courses"
        app:layout_constraintTop_toBottomOf="@+id/main_courses" />

    <TextView
        android:id="@+id/main_description_first"
        android:layout_width="259dp"
        android:layout_height="43dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/main_first_description"
        android:textColor="@color/bone_white"
        android:textSize="@dimen/small_font"
        app:layout_constraintStart_toStartOf="@+id/main_header_first"
        app:layout_constraintTop_toBottomOf="@+id/main_header_first" />

    <ImageView
        android:id="@+id/imageView10sashimi"
        android:layout_width="@dimen/layout_pictures_width"
        android:layout_height="@dimen/layout_pictures_height"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_description_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_description_first"
        app:srcCompat="@drawable/pilis" />

    <TextView
        android:id="@+id/main_header_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/main_second_dish"
        android:textColor="@color/bone_white"
        android:textSize="@dimen/medium_font"
        app:layout_constraintStart_toStartOf="@+id/main_courses"
        app:layout_constraintTop_toBottomOf="@+id/main_description_first" />

    <TextView
        android:id="@+id/main_description_second"
        android:layout_width="268dp"
        android:layout_height="35dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/main_second_description"
        android:textColor="@color/bone_white"
        android:textSize="@dimen/small_font"
        app:layout_constraintStart_toStartOf="@+id/main_header_second"
        app:layout_constraintTop_toBottomOf="@+id/main_header_second" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="@dimen/layout_pictures_width"
        android:layout_height="@dimen/layout_pictures_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_description_second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_description_second"
        app:layout_constraintTop_toBottomOf="@+id/imageView10sashimi"
        app:srcCompat="@drawable/wok" />

    <TextView
        android:id="@+id/main_header_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/main_third_dish"
        android:textColor="@color/bone_white"
        android:textSize="@dimen/medium_font"
        app:layout_constraintStart_toStartOf="@+id/main_courses"
        app:layout_constraintTop_toBottomOf="@+id/main_description_second" />

    <TextView
        android:id="@+id/main_description_third"
        android:layout_width="247dp"
        android:layout_height="39dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/main_third_description"
        android:textColor="@color/bone_white"
        android:textSize="@dimen/small_font"
        app:layout_constraintStart_toStartOf="@+id/main_header_third"
        app:layout_constraintTop_toBottomOf="@+id/main_header_third" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="@dimen/layout_pictures_width"
        android:layout_height="@dimen/layout_pictures_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_description_third"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintStart_toEndOf="@+id/main_description_third"
        app:layout_constraintTop_toBottomOf="@+id/imageView12"
        app:srcCompat="@drawable/curry" />

    <Button
        android:id="@+id/buttonStarter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/starters"
        android:textAllCaps="false"
        android:textColor="@color/bone_white"
        android:textSize="@dimen/medium_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDessert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/dessert"
        android:textAllCaps="false"
        android:textColor="@color/bone_white"
        android:textSize="@dimen/medium_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStarter" />

</androidx.constraintlayout.widget.ConstraintLayout>